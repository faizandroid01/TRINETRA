<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.master.faiz.trinetra.Admin.AdminScheduleAttendance">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <DatePicker
          android:layout_width="300dp"
          android:layout_height="400dp"
          android:id="@+id/activity_admin_schedule_attendance_date_picker"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="50dp"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_admin_schedule_attendance_confirm_button"
            android:layout_below="@+id/activity_admin_schedule_attendance_date_picker"
            android:text="CONFIRM"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="adminScheduleAttendance"

            />

    </RelativeLayout>


</LinearLayout>
