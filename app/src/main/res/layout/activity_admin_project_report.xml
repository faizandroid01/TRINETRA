<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.master.faiz.trinetra.Admin.AdminProjectReport">


    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_margin="5dp"
                android:background="@color/datepicker_background"
                android:id="@+id/activity_admin_project_report_contractor_date_picker"
                android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_admin_project_report_contractor_date_picker"
            android:id="@+id/choose_contractor"
            android:text="CHOOSE CONTRACTOR"
            android:textSize="15sp"
            android:layout_margin="10dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/listview_background"
            android:layout_below="@+id/choose_contractor"
            android:id="@+id/activity_admin_project_report_contractor_list_view"
            />



    </RelativeLayout>



</LinearLayout>
