<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_admin_view_package_linear_layout"
    android:orientation="vertical"
    tools:context="com.master.faiz.trinetra.Admin.AdminViewPackage">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:text="Package Name :"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />


        <TextView
            android:id="@+id/activity_admin_view_package_package_name"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview1"
            android:hint="P Name "
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />


        <TextView
            android:id="@+id/textview2"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_below="@+id/textview1"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:text="Package Location :"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />

        <TextView
            android:id="@+id/activity_admin_view_package_package_location"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/activity_admin_view_package_package_name"
            android:layout_marginEnd="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview2"
            android:hint="P Loc "
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_below="@+id/textview2"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:text="Package Start Date :"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />

        <TextView
            android:id="@+id/activity_admin_view_package_package_start_date"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/activity_admin_view_package_package_location"
            android:layout_marginEnd="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview2"
            android:hint="P Start Date "
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />


        <TextView
            android:id="@+id/textview4"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_below="@+id/textview3"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:text="Package End Date :"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />

        <TextView
            android:id="@+id/activity_admin_view_package_package_end_date"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="@dimen/acitivity_admin_view_package_textviews_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/activity_admin_view_package_package_start_date"
            android:layout_marginEnd="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview2"
            android:hint="P End Date "
            android:padding="@dimen/acitivity_admin_view_package_textviews_padding"
            android:textSize="@dimen/acitivity_admin_view_package_textviews_textSize" />


        <Button
            android:id="@+id/activity_admin_view_package_view_contractor_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="viewContractors"
            android:text="VIEW CONTRACTORS" />

        <Button
            android:id="@+id/activity_admin_view_package_view_package_report"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_admin_view_package_view_contractor_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="packageReport"
            android:text="PACKAGE REPORT" />


    </RelativeLayout>


</LinearLayout>
