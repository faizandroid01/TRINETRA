<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.master.faiz.trinetra.Admin.AdminAddContractor">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="75dp"
            android:id="@+id/activity_admin_add_contractor_email_id"
            android:hint="Email id  of Contractor"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_admin_add_contractor_add_button"
            android:layout_below="@+id/activity_admin_add_contractor_email_id"
            android:text="OK"
            android:onClick="adminAddContractorDetails"
            />


    </RelativeLayout>


</LinearLayout>
