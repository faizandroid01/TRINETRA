<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.master.faiz.trinetra.Contractor.ContractorAddWorker">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="39dp"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="WORKER NAME :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_contractor_add_worker_worker_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview1"
            android:hint="WORKER NAME :"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="39dp"
            android:layout_below="@+id/textview1"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="WORKER TYPE :"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/activity_contractor_add_worker_worker_type_spinner"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_below="@+id/activity_contractor_add_worker_worker_name"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview1" />





        <TextView
            android:id="@+id/textview3"
            android:layout_width="@dimen/acitivity_admin_view_package_textviews_width"
            android:layout_height="39dp"
            android:layout_below="@+id/textview2"
            android:layout_marginStart="@dimen/acitivity_admin_view_package_textviews_margin_start"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="WORKER AADHAR NO :"
            android:textSize="14dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/activity_contractor_add_worker_aadhar_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_contractor_add_worker_worker_type_spinner"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textview1"
            android:hint="AADHAR NO :"
            android:textSize="15dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_contractor_add_worker_add_worker_button"
            android:layout_below="@+id/activity_contractor_add_worker_aadhar_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="OK"
            android:background="@drawable/curve_button_background"
            android:onClick="addWorker"/>

    </RelativeLayout>

</LinearLayout>
